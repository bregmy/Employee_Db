<!DOCTYPE html>
<html>
  <head>
    <title>Employee Search</title>
  </head>
  <body>
    <h1>Employee Search</h1>


    <% if (employees.length) { %>
      <h2>Results</h2>
      <table>
        <thead>
          <tr>
            <th>Employee No</th>
            <th>Birth Date</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Hire Date</th>
          </tr>
        </thead>
        <tbody>
          <% employees.forEach(employee => { %>
            <tr>
              <td><%= employee.emp_no %></td>
              <td><%= employee.birth_date.toISOString().substring(0, 10) %></td>
              <td><%= employee.first_name %></td>
              <td><%= employee.last_name %></td>
              <td><%= employee.gender %></td>
              <td><%= employee.hire_date.toISOString().substring(0, 10) %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else if (searchTerm) { %>
      <p>No results found for '<%= searchTerm %>'</p>
    <% } %>
  </body>
</html>
